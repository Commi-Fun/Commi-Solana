{
  "name": "commi-merkle",
  "version": "1.0.0",
  "description": "Commi-merkle Solana program with backend server",
  "license": "ISC",
  "main": "dist/app/src/server.js",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "app:dev": "ts-node-dev --respawn --transpile-only app/src/server.ts",
    "app:build": "tsc --project app/tsconfig.json",
    "app:start": "node dist/app/src/server.js",
    "app:test": "jest --testPathPattern=app/",
    "build": "anchor build && npm run app:build"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@pythnetwork/pyth-solana-receiver": "^0.11.0",
    "@solana/web3.js": "^1.95.3",
    "js-sha256": "^0.11.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@solana/spl-token": "^0.4.13",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.4.5",
    "@types/jest": "^29.5.3",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.1"
  }
